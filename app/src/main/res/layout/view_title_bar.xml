<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange">

    <FrameLayout
        android:id="@+id/title_left_fl"
        android:layout_width="wrap_content"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/dimen_30px"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30px"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/dimen_30px"
            android:scaleType="fitStart"
            android:src="@drawable/title_left_white_icon" />

    </FrameLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_left_fl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_26px"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_36px" />

    <FrameLayout
        android:id="@+id/title_right_fl"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/title_right_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/dimen_26px"
            android:scaleType="fitStart"
            android:src="@drawable/share"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:maxEms="8"
            android:paddingRight="@dimen/dimen_30px"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30px"
            android:visibility="visible" />
    </FrameLayout>
</RelativeLayout>