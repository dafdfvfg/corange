<?xml version="1.0" encoding="utf-8"?>
<com.example.liang.corange.views.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.liang.corange.views.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="90%">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100px"
            android:background="@drawable/shape_gray"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/dimen_48px" />

        <com.example.liang.corange.views.PercentLinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_20px"
            android:paddingLeft="@dimen/dimen_40px"
            android:paddingRight="@dimen/dimen_40px"
            android:paddingTop="@dimen/dimen_20px" />

        <com.example.liang.corange.views.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_40px"
                android:layout_marginRight="@dimen/dimen_20px"
                android:background="@drawable/shape_3_gray"
                android:text=""
                android:textColor="@color/color_file_attr" />

            <Button
                android:id="@+id/dialog_ok"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_20px"
                android:layout_marginRight="@dimen/dimen_40px"
                android:background="@drawable/shape_blue"
                android:text=""
                android:textColor="@color/white" />

        </com.example.liang.corange.views.PercentLinearLayout>

    </com.example.liang.corange.views.PercentLinearLayout>


</com.example.liang.corange.views.PercentLinearLayout>